
upstream asterisk_ws
{
    server asterisk : 8089;
}

upstream whisper_ws
{
    server app : 4000;
}

upstream voiceai_app
{
    server app : 3000;
}

server
{
    listen 443 ssl http2;
    server_name voiceai.wordpressstagingsite.com;

    ssl_certificate / etc / letsencrypt / live / voiceai.wordpressstagingsite.com / fullchain.pem;
    ssl_certificate_key / etc / letsencrypt / live / voiceai.wordpressstagingsite.com / privkey.pem;

#Increase upload size limit
    client_max_body_size 100M;

#SIP WebSocket(Asterisk)
    location / sipws
    {
        proxy_pass http : // asterisk_ws/ws;
                          proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "Upgrade";
        proxy_set_header Host $host;
        proxy_read_timeout 3600;
        proxy_send_timeout 3600;
    }

#WhisperLive WebSocket
    location / whisper
    {
        proxy_pass http : // whisper_ws;
                          proxy_http_version 1.1;

        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "Upgrade";
        proxy_set_header Host $host;
        proxy_read_timeout 3600;
        proxy_send_timeout 3600;
    }

#Proxy app frontend
    location /
    {
        proxy_pass http : // voiceai_app;
                          proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
    }
}
